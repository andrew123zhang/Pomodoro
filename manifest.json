{
	"manifest_version": 2,
	"name": "Pomodoro",
	"version": "0.12",
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": ["block.js"],
			"run_at": "document_start"
		}
	],
	"web_accessible_resources": [
		"blocked.html"
	],
	"background": {
		"scripts": ["pomodoro.js"]
	},
	"browser_action": {
		"default_title": "Pomodoro",
		"default_popup": "popup.html",
		"default_icon": "vegetable-128.png"
	}
}
